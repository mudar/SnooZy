<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="DialogBaseTheme" parent="Theme.AppCompat.Light.Dialog" >
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <!-- Application theme. -->
    <style name="AppThemeNoBg" parent="AppBaseTheme">
        <!--<item name="android:logo">@drawable/ic_logo</item>-->
        <!--<item name="android:actionBarStyle">@style/LogoActionBar</item>-->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorLink">#37474F</item>
        <item name="android:alertDialogTheme">@style/CustomDialogStyle</item>
        <!--<item name="drawerArrowStyle">@style/MyDrawerArrowToggle</item>-->
    </style>

    <style name="CustomDialogStyle" parent="DialogBaseTheme">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>

    <style name="AppTheme" parent="AppThemeNoBg">
        <item name="android:windowBackground">@color/bg_app</item>
    </style>

    <!--Toolbar-->
    <style name="HeaderToolbar">
        <!--<item name="navigationIcon">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>-->
        <item name="popupTheme">@style/ToolbarPopupOverlayTheme</item>
        <item name="theme">@style/ToolbarOverlayTheme</item>
        <item name="titleTextAppearance">@style/ActionBar.TitleText</item>
        <!--<item name="contentInsetStart">?actionBarInsetStart</item>-->
    </style>

    <style name="ToolbarOverlayTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="colorControlNormal">@color/text_primary</item>
    </style>
    <style name="ToolbarPopupOverlayTheme" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HistoryListEmpty" parent="@android:style/TextAppearance.Medium">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:paddingBottom">@dimen/listview_empty_bottom_padding</item>
    </style>

    <style name="CardHeaderLegend" parent="@android:style/TextAppearance.Small">
        <!--<item name="android:textColor">@color/card_header_color</item>-->
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <!--<item name="android:padding">@dimen/card_header_inner_padding</item>-->
    </style>

    <style name="CardRowText">
        <item name="android:textColor">@color/text_list_item</item>
    </style>


    <!--About-->
    <style name="AboutPrimaryText" >
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="AboutRow">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">top</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>

</resources>
